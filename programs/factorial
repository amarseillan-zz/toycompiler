#include <stdio.h>
def int main;
def int dummy2;

int
main() {
	var int num;
	var int fact = 1;
	printf("Ingrese un numero positivo para calcular su factorial: \n");
	scanf("%d", &num);
	var int aux = num;
	if ( num < 0 ) {
		printf("Entrada invalida\n");
	}
	while ( num > 0 ) {
		fact = fact * num;
		num  = num - 1;
	}
	printf("El factorial de %d es %d\n", aux, fact);
	dummy2();
}

int
dummy2(){
	return 0;
}