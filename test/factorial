#include <stdio.h>

int
main() {

	int num;
	int fac = 1;
	printf("Ingrese un número positivo para calcular el factorial:\n");
	scanf("%d", &num);
	int aux = num;
	if ( num < 0 ) {
		printf("El número debe ser mayor a 0\n");
	}
	while ( num > 0 ) {
		fac = fac * num;
		num  = num - 1;
	}
	printf("El factorial de %d es %d\n", aux, fac);
}
